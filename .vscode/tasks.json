{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-IC:/local/OpenSSL-Win64/include", // Added OpenSSL include path
                "-IC:/local/curl-8.11.0/include",              // Added libcurl include path (change accordingly)
                "-LC:/local/OpenSSL-Win64/lib",      // Added OpenSSL lib path
                "-LC:/local/curl-8.11.0/lib",                  // Added libcurl lib path (change accordingly)
                "-lssl",                                     // Link with OpenSSL libssl
                "-lcrypto",                                  // Link with OpenSSL libcrypto
                "-lcurl"                                     // Link with libcurl
            ],
            "options": {
                "cwd": "C:\\msys64\\ucrt64\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}",
                "/I", "C:\\local\\OpenSSL-Win64\\include",  // Added OpenSSL include path for cl.exe
                "/I", "C:\\path\\to\\libcurl\\include",             // Added libcurl include path (adjust path as needed)
                "C:\\local\\OpenSSL-Win64\\lib\\libssl.lib", // Link with OpenSSL libssl
                "C:\\local\\OpenSSL-Win64\\lib\\libcrypto.lib", // Link with OpenSSL libcrypto
                "C:\\path\\to\\libcurl\\lib\\libcurl.lib"          // Link with libcurl (adjust path as needed)
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Open Developer Command Prompt",
            "type": "process",
            "command": "C:\\Program Files (x86)\\Microsoft Visual Studio\\2022\\BuildTools\\Common7\\Tools\\VsDevCmd.bat",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Opens the Developer Command Prompt for VS"
        }
    ]
}
